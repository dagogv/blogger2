<h1><%= @article.title %></h1>

<p>
	<%= link_to 'Tag:', tags_path %>
	<% @article.tags.each do |tg| %>
		<%= link_to tg.name, tag_path(tg) %>
	<% end %>
</p>
<br>

<p>
	<% if @article.image.exists? %>
	<%= image_tag @article.image.url %></p>
	<% end %>

<p><h2>Article Body: <%= @article.body %></h2></p>
<br>
<br>
  <hr>
<h1>Comments (<%= @article.comments.size %>)</h1>
<%= render partial: 'articles/comment', collection: @article.comments %>
<br>
<%= render partial: 'comments/form' %>
<br>
<%= link_to 'Back to Articles', articles_path %><br>
<%= link_to 'Delete', article_path(@article), method: :delete, data: {confirm: 'Delete article?'} %><br>
<%= link_to 'Edit', edit_article_path(@article) %>